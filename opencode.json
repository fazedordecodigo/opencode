{
  "$schema": "https://opencode.ai/config.json",
  "theme": "catppuccin",
  "instructions": [".config/opencode/instructions/*.md"],
  "permission": {
    "bash": {
      "git status": "allow",
      "git diff": "allow",
      "npm run build": "allow",
      "ls": "allow",
      "pwd": "allow"
    }
  },
  "mcp": {
		"deepwiki": {
			"url": "https://mcp.deepwiki.com/sse",
			"type": "remote",
			"enabled": false
		},
		"microsoft-docs": {
			"url": "https://learn.microsoft.com/api/mcp",
			"type": "remote",
      "enabled": true
		},
		"sequentialthinking": {
			"command": [
				"npx",
				"-y",
				"@modelcontextprotocol/server-sequential-thinking"
			],
			"type": "local",
      "enabled": true
		},
		"memory": {
			"command": [
				"npx",
				"-y",
				"@modelcontextprotocol/server-memory"
			],
			"environment": {
				"MEMORY_FILE_PATH": "${MEMORY_FILE_PATH}"
			},
			"type": "local",
			"enabled": false
		},
		"azure-devops": {
			"command": [
				"npx",
				"-y",
				"@azure-devops/mcp",
				"${ADO_ORG}"
			],
			"type": "local",
      "enabled": true
		}
  }
}
